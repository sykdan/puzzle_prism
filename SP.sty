\newcommand{\vedouci}[1]{\renewcommand{\vedouci}{#1}}		% Definování příkazu \vedouci tak, aby se do něj uložil název vedoucího
\newcommand{\place}[1]{\renewcommand{\place}{#1}}			% Definování příkazu \place tak, aby se do něj uložilo místo
\newcommand{\skolnirok}[1]{\renewcommand{\skolnirok}{#1}}	% Definování příkazu \skolnirok tak, aby se do něj uložil školní rok
\newcommand{\logo}[1]{\renewcommand{\logo}{#1}}				% Definování příkazu \logo tak, aby se do něj uložilo logo

\newcommand{\mytitlepage}{									% Definování vlastní titulní strany

	\begin{titlepage}										% Odebrání čísla strany atd

		\bfseries											% Zapnutí tučného písma
		
			\logo											% Logo
			
			\vspace{1cm}									% Mezera s pevnou šířkou
			
			{\Huge MATURITNÍ PRÁCE}

			\vspace{4cm}
			
			{\Huge\@title\par}								% Autor
			{\Huge\@author\par}								% Název
			{\Large vedoucí práce: \vedouci}				% Vedoucí práce
			
			\vfill											% Mezera roztahující se jak nejvíc může
			
			\large \place\ \@date\hfill\skolnirok			% Místo, datum a školní rok
 
	\end{titlepage}
	
	\addtocounter{page}{1}									% Posunutí countru stránek
}

\newcommand{\prohlaseni}[1]{								% Definování prohlášení
	\chapter*{Prohlášení}
		\vfill												% Mezera roztahující se jak nejvíc může
		#1													% Parametr (text prohlášení)
		\vfill												% Mezera roztahující se jak nejvíc může
		\place\ dne	\leaders\hbox{.\,}\hskip 10em\ podpis \dotfill		% Podpis
		\begin{flushright}\@author\end{flushright}
		\vfill												% Mezera roztahující se jak nejvíc může
	\newpage												% Nová strana
}

\newcommand{\abstrakt}[2]{									% Definování abstraktu
	\chapter*{Abstrakt}
		#1													% Parametr (text abstraktu)
		\section*{Klíčová slova}
		#2													% 2. parametr (klíčová slova)
	\newpage												% Nová strana
}

\newcommand{\podekovani}[1]{								% Definování poděkování
	\chapter*{Poděkování}
		#1													% Parametr (text poděkování)
	\newpage												% Nová strana
}

